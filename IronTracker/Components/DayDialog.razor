@* DayDialog.razor - Dialog for creating/editing routine days *@

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Today" Class="mr-2" />
            @(IsNew ? "Add Day" : "Edit Day")
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="Day.Name" 
                     Label="Day Name" 
                     Required="true"
                     RequiredError="Name is required"
                     Placeholder="e.g., Chest & Triceps"
                     Class="mb-4" />
        <MudNumericField @bind-Value="Day.SortOrder" 
                        Label="Order" 
                        Min="1"
                        HelperText="Position in the routine" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" 
                  Variant="Variant.Filled"
                  Disabled="@(string.IsNullOrWhiteSpace(Day.Name))"
                  OnClick="Submit">
            @(IsNew ? "Add" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public RoutineDay Day { get; set; } = new();

    [Parameter]
    public bool IsNew { get; set; }

    private void Cancel() => MudDialog.Cancel();

    private void Submit() => MudDialog.Close(DialogResult.Ok(Day));
}

@inject IStringLocalizer<AppResources> L

@* RoutineDialog.razor - Dialog for creating/editing routines *@

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.FitnessCenter" Class="mr-2" />
            @(IsNew ? L["CreateRoutine"] : L["EditRoutine"])
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="Routine.Name" 
                     Label="@L["RoutineName"]" 
                     Required="true"
                     RequiredError="@L["NameIsRequired"]"
                     Placeholder="@L["RoutineNamePlaceholder"]"
                     Class="mb-4" />
        <MudTextField @bind-Value="Routine.Description" 
                     Label="@L["Description"]" 
                     Lines="2"
                     Placeholder="@L["OptionalDescription"]" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@L["Cancel"]</MudButton>
        <MudButton Color="Color.Primary" 
                  Variant="Variant.Filled"
                  Disabled="@(string.IsNullOrWhiteSpace(Routine.Name))"
                  OnClick="Submit">
            @(IsNew ? L["Create"] : L["Save"])
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public Routine Routine { get; set; } = new();

    [Parameter]
    public bool IsNew { get; set; }

    private void Cancel() => MudDialog.Cancel();

    private void Submit() => MudDialog.Close(DialogResult.Ok(Routine));
}

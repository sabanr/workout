@inject IStringLocalizer<AppResources> L
@* DashboardSettingsDialog.razor - Dialog for configuring dashboard metrics visibility *@
@inject SettingsService SettingsService

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Dashboard" Class="mr-2" />
            @L["DashboardSettings"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body2" Color="Color.Secondary" Class="mb-4">
            @L["DashboardSettingsDescription"]
        </MudText>

        <MudStack Spacing="2">
            <MudSwitch @bind-Value="SettingsService.ShowStreakCard"
                      Color="Color.Primary"
                      Label="@L["ConsecutiveDaysStreak"]" />

            <MudSwitch @bind-Value="SettingsService.ShowQuickStartCard"
                      Color="Color.Primary"
                      Label="@L["QuickStartSessionStatus"]" />

            <MudSwitch @bind-Value="SettingsService.ShowTotalSessionsCard"
                      Color="Color.Primary"
                      Label="@L["TotalRecentSessions"]" />

            <MudSwitch @bind-Value="SettingsService.ShowVolumeChart"
                      Color="Color.Primary"
                      Label="@L["DailyTrainingVolumeChart"]" />

            <MudSwitch @bind-Value="SettingsService.ShowRecentActivity"
                      Color="Color.Primary"
                      Label="@L["RecentActivityList"]" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close" Variant="Variant.Filled" Color="Color.Primary">
            @L["Done"]
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    private void Close() => MudDialog.Close();
}

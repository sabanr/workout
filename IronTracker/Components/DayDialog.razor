@inject IStringLocalizer<AppResources> L

@* DayDialog.razor - Dialog for creating/editing routine days *@

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Today" Class="mr-2" />
            @(IsNew ? L["AddDay"] : L["EditDay"])
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="Day.Name" 
                     Label="@L["DayName"]" 
                     Required="true"
                     RequiredError="@L["NameIsRequired"]"
                     Placeholder="@L["DayNamePlaceholder"]"
                     Class="mb-4" />
        <MudNumericField @bind-Value="Day.SortOrder" 
                        Label="@L["Order"]" 
                        Min="1"
                        HelperText="@L["PositionInRoutine"]" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@L["Cancel"]</MudButton>
        <MudButton Color="Color.Primary" 
                  Variant="Variant.Filled"
                  Disabled="@(string.IsNullOrWhiteSpace(Day.Name))"
                  OnClick="Submit">
            @(IsNew ? L["Add"] : L["Save"])
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public RoutineDay Day { get; set; } = new();

    [Parameter]
    public bool IsNew { get; set; }

    private void Cancel() => MudDialog.Cancel();

    private void Submit() => MudDialog.Close(DialogResult.Ok(Day));
}
